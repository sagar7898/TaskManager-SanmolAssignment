@model IEnumerable<SanmolTaskManager_Models.Customer>

@{
    ViewData["Title"] = "Customers";
    var totalPages = ViewBag.TotalPages;
    var currentPage = ViewBag.CurrentPage;
    var pageSize = ViewBag.Pagesize;
    int serialNumber = ((currentPage - 1) * pageSize) + 1;
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Customer List</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0 text-primary">
            <i class="fas fa-users"></i> Total Customers:
            <span class="badge badge-pill badge-success">@ViewBag.TotalCustomers</span>
        </h5>
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <a class="btn btn-primary" asp-action="AddOrEdit">
            <i class="fas fa-plus-circle"></i> Add New Customer
        </a>
        <button class="btn btn-success" onclick="exportWithSuccess()">
            <i class="fas fa-file-excel"></i> Export to Excel
        </button>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th># of Tasks</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                       

                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@serialNumber</td>
                                <td>@customer.Name</td>
                                <td>@customer.Email</td>
                                <td>@customer.Phone</td>
                                <td>@(ViewBag.TaskCounts.ContainsKey(customer.Id) ? ViewBag.TaskCounts[customer.Id] : 0)</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" asp-action="AddOrEdit" asp-route-id="@customer.Id">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@customer.Id">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            serialNumber++; // 👈 Increment for next row
                        }

                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav>
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportWithSuccess() {
            showSuccess("Excel file is being downloaded...");

            setTimeout(function () {
                window.location.href = "/Customer/ExportToExcel";
            }, 1500);
        }

        @if (TempData["Success"] != null)
        {
            <text>showSuccess("@TempData["Success"]"); </text>
        }
        else if (TempData["Error"] != null)
        {
            <text>showError("@TempData["Error"]"); </text>
        }
    </script>
}
