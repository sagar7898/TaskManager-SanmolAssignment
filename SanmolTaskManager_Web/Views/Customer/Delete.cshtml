@model SanmolTaskManager_Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="h4 text-gray-800 mb-2 text-center">Delete Confirmation</h1>
            <p class="text-muted text-center mb-4">You’re about to remove this customer. Please review the details below.</p>

            <div class="card shadow border-left-danger">
                <div class="card-header bg-danger text-white">
                    <strong>Are you sure you want to delete this customer?</strong>
                </div>
                <div class="card-body">
                    <dl class="row mb-3">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="page" value="@ViewBag.Page" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger px-4 mr-2">
                                <i class="fas fa-trash-alt"></i> Yes, Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
