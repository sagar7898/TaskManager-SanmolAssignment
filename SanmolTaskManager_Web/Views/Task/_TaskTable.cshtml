@model IEnumerable<SanmolTaskManager_Models.TaskItem>

@{
    var statusFilter = ViewBag.StatusFilter as string ?? "Pending";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="table-responsive">
    <table class="table table-hover mb-0">
        <thead class="thead-light">
            <tr>
                <th>Description</th>
                <th>Customer</th>
                <th>
                    <a href="#" id="sortDueDate" data-sort="@ViewBag.SortOrder" class="text-dark">
                        Due Date
                        <i class="fas @(ViewBag.SortOrder == "asc" ? "fa-sort-up" : "fa-sort-down") ml-1"></i>
                    </a>
                </th>
                <th>Status</th>
                <th>Priority</th>
                <th style="width: 140px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted p-4">
                        No tasks found.
                    </td>
                </tr>
            }
            else
            {
                foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Description</td>
                        <td>
                            <a asp-controller="Customer" asp-action="Details" asp-route-id="@task.CustomerId">
                                @task.Customer?.Name
                            </a>
                        </td>
                        <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @(task.Status == "Completed" ? "badge-success" : "badge-warning")">
                                @task.Status
                            </span>
                        </td>
                        <td>
                            <span class="badge
                                @(task.Priority == "High" ? "badge-danger" :
                                  task.Priority == "Medium" ? "badge-info" : "badge-secondary")">
                                @task.Priority
                            </span>
                        </td>
                        <td>
                            <a asp-action="AddOrEdit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            @if (task.Status != "Completed")
                            {
                                <button class="btn btn-sm btn-outline-success mark-complete" data-id="@task.Id">
                                    <i class="fas fa-check"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- AJAX Pagination -->
@if (totalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link ajax-page-link" href="#" data-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
